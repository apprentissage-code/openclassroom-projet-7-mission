{% extends 'base.html.twig' %}

{% block title %}Projet :
	{{project.title}}
{% endblock %}

{% block body %}
	<header>
		<div id="current-user"></div>
		<div id="title-page">
			<div class="flex-header">
				<h1>{{project.title}}</h1>
				<div class="user-list">
          {% for employee in project.members %}
					  <div class="avatar">{{employee.firstName|first}}{{employee.lastName|first}}</div>
          {% endfor %}
				</div>
				<a class="button" href="{{ path('app_project_edit', {id: project.id}) }}">Modifier</a>
			</div>
		</div>
	</header>
	<div id="content">
		<div id="tasks-container">
			<div class="task-column">
				<h2>To Do</h2>
				<div class="tasks-list">
          {% for task in project.tasks|filter(task => task.status == "To Do") %}
            <a class="task" href="{{ path('app_task_edit', {project_id: project.id, task_id: task.id}) }}">
              <h3>{{task.title}}</h3>
              <p>{{task.description}}</p>
              <div class="task-infos">
                <div class="task-deadline">
                  <i class="fa-regular fa-calendar"></i>
                  {{task.date | date("d/m/Y")}}
                </div>
              </div>
            </a>
          {% endfor %}
					<a href="#" class="task-add">
						+ Ajouter une tâche
					</a>
				</div>
			</div>
			<div class="task-column">
				<h2>Doing</h2>
				<div class="tasks-list">
        {% for task in project.tasks|filter(task => task.status == "Doing") %}
            <a class="task" href="{{ path('app_task_edit', {project_id: project.id, task_id: task.id}) }}">
              <h3>{{task.title}}</h3>
              <p>{{task.description}}</p>
              <div class="task-infos">
                <div class="task-deadline">
                  <i class="fa-regular fa-calendar"></i>
                  {{task.date | date("d/m/Y")}}
                </div>
                <div class="mini-user">
                  {{task.member.firstName|first}}{{task.member.lastName|first}}
							  </div>
              </div>
            </a>
          {% endfor %}
					<a href="#" class="task-add">
						+ Ajouter une tâche
					</a>
				</div>
			</div>
			<div class="task-column">
				<h2>Done</h2>
				<div class="tasks-list">
					{% for task in project.tasks|filter(task => task.status == "Done") %}
            <a class="task" href="{{ path('app_task_edit', {project_id: project.id, task_id: task.id}) }}">
              <h3>{{task.title}}</h3>
              <p>{{task.description}}</p>
              <div class="task-infos">
                <div class="mini-user">
                  {{task.member.firstName|first}}{{task.member.lastName|first}}
							  </div>
              </div>
            </a>
          {% endfor %}
					<a href="#" class="task-add">
						+ Ajouter une tâche
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

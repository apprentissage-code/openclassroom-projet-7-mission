{% extends 'base.html.twig' %}

{% block title %}Créer une tâche
{% endblock %}

{% block body %}
	<header>
		<div id="current-user"></div>
		<div id="title-page">
			<h1>Créer une tâche</h1>
		</div>
	</header>
	<div id="content">
		{{ form_start(form) }}
		<div class="input">
			{{ form_row(form.title) }}
		</div>
    <div class="input">
			{{ form_row(form.description) }}
		</div>
    <div class="input">
			{{ form_row(form.date) }}
		</div>
    <div class="input">
			{{ form_row(form.status) }}
		</div>
		<div class="input">
			{{ form_row(form.member) }}
		</div>
    <br>
		<button class="button button-submit">Ajouter</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
